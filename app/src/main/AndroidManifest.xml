<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.androidsqlitecrud">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SobreActivity"
            android:label="@string/sobre"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.UpdateActivity"
            android:label="@string/atualizar"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.DeleteActivity"
            android:label="@string/excluir"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ReadActivity"
            android:label="@string/listar"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.CreateActivity"
            android:label="@string/tituloCreate"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>